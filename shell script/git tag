Test-Path $PROFILE
New-Item -Path $PROFILE -Type File -Force
notepad $PROFILE
. $PROFILE

function gtp($tagName) {
    # 检查 tag 名称是否为空
    if ([string]::IsNullOrWhiteSpace($tagName)) {
        Write-Error "Tag name cannot be empty"
        return
    }

    # 执行 git 命令
    try {
        git tag $tagName
        if ($?) {  # 如果 tag 创建成功
            git push origin $tagName
        }
    }
    catch {
        Write-Error "Error occurred: $_"
    }
}
